<ul>
    <li>
        <a href="/movies/{{foundMovie._id}}">Back</a>
    </li>
</ul>
<h2>Edit movie: {{foundMovie.title}}</h2>

<form action="/movies/{{foundMovie._id}}/edit" method="POST">
    <label> Title:
        <input type="text" name="title" value="{{foundMovie.title}}">
    </label>
    <label> Genre:
        <input type="text" name="genre" value="{{foundMovie.genre}}">
    </label>
    <label> Plot:
        <textarea type="text" name="plot">{{foundMovie.plot}}</textarea>
    </label>
    <label for="cast">Select cast members</label>
    <select name="cast" id="cast" multiple>
        {{#each allCelebsFromDb}}
            <option value="{{_id}}">{{name}}</option>
        {{/each}}
    </select>
    <button type="submit">Save changes</button>
</form>